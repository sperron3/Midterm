<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1>
                <%= title %>
            </h1>
            <a href="/books/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Book</a>
            <br>
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Year</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody id="bookList">
                <% for(let count=0; count < books.length; count++) { %>
                    <tr>
                        <td scope="row" class="text-center"></td>
                        <td><%= books[count].name %></td>
                        <td><%= books[count].author %></td>
                        <td><%= books[count].published %></td>
                        <td><%= books[count].description %></td>
                        <td><%= books[count].price %></td>
                        <td class="text-center col-1">
                            <a class="btn btn-primary" href="/books/edit/<%= books[count].id %>">
                                Edit
                            </a>
                        </td>
                        <td class="text-center col-1">
                            <a class="btn btn-warning" href="/books/delete/<%= books[count].id %>">
                                Delete
                            </a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>